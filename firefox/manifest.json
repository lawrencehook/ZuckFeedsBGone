{
  "description": "Remove the Facebook news feed and Instagram Explore feed.",
  "manifest_version": 2,
  "name": "ZuckFeedsBGone",
  "version": "0.0.1",
  "homepage_url": "https://github.com/lawrencehook/ZuckFeedsBGone",

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.instagram.com/*"],
      "js": ["main.js"],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "page_action": {
    "browser_style": true,
    "show_matches": ["*://*.facebook.com/*", "*://*.instagram.com/*"],
    "default_popup": "options.html",
    "default_title": "Options",
    "default_icon": {
      "16": "icons/no-16.png",
      "32": "icons/no-32.png",
      "64": "icons/no-64.png"
    },
    "default_title": "ZuckFeedsBGone"
  },

  "permissions": ["storage"]
}
